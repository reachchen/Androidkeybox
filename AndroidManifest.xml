<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ruichen.keyboxview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ruichen.keyboxview.ChooseKeyBoxViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 随机生成的键盘按键 -->
        <activity 
            android:name="com.ruichen.keyboxview.RandomKeyboxActivity"
            ></activity>
        <!-- 自定义系统键盘 -->
        <activity 
            android:name="com.ruichen.keyboxview.MainActivity"></activity>
    </application>

</manifest>
