<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#BDBDBD"
	    android:orientation="vertical"
	    android:padding="1px"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_keyboard_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_keyboard_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_keyboard_6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_keyboard_7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_keyboard_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:contentDescription="@string/action_settings"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/keyboard_btn_backspace" />

        <TextView
            android:id="@+id/tv_keyboard_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_keyboard_none"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1px"
            android:layout_weight="1"
            android:background="@drawable/draw_keyboard_press_style"
            android:gravity="center"
            android:text="无密码"
            android:textColor="#FF000000"
            android:textSize="16sp" />
       </LinearLayout>
    </LinearLayout>

</LinearLayout>
